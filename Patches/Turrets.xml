<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<!-- TURRETS USE AMMUNITION -->

	<!-- Description -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "Turret_MiniTurret"]/description</xpath>
		<value>
			    <description>A portable automatic turret. Requires industrial ammo to reload. May explode when damaged. Its dumb AI brain can't be directly controlled, so beware of friendly fire.</description>
		</value>
	</Operation>

	<!-- Fuel Label -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "Turret_MiniTurret"]/comps/li/fuelLabel</xpath>
		<value>
			<fuelLabel>Shots until out of ammo</fuelLabel>
		</value>
	</Operation>

	<!-- Fuel Gizmo Label -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "Turret_MiniTurret"]/comps/li/fuelGizmoLabel</xpath>
		<value>
			<fuelGizmoLabel>Ammo left</fuelGizmoLabel>
		</value>
	</Operation>

	<!-- Out of fuel Message -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "Turret_MiniTurret"]/comps/li/outOfFuelMessage</xpath>
		<value>
			<outOfFuelMessage>Cannot shoot: Needs ammo</outOfFuelMessage>
		</value>
	</Operation>

	<!-- Ammo Type -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "Turret_MiniTurret"]/comps/li/fuelFilter</xpath>
		<value>
			<fuelFilter><thingDefs><li>AmmoIndustrial</li></thingDefs></fuelFilter>
		</value>
	</Operation>

	<!-- Cost efficiency -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "Turret_MiniTurret"]/comps/li/fuelMultiplier</xpath>
		<value>
			<fuelMultiplier>1</fuelMultiplier>
		</value>
	</Operation>

	<!-- Description -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "Turret_Autocannon"]/description</xpath>
		<value>
			    <description>A heavy automatic turret. Requires industrial ammo to reload. It cannot fire at close-up targets, and may explode when damaged.</description>
		</value>
	</Operation>

	<!-- Fuel Label -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "Turret_Autocannon"]/comps/li/fuelLabel</xpath>
		<value>
			<fuelLabel>Shots until out of ammo</fuelLabel>
		</value>
	</Operation>

	<!-- Feul Gizmo Label -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "Turret_Autocannon"]/comps/li/fuelGizmoLabel</xpath>
		<value>
			<fuelGizmoLabel>Ammo left</fuelGizmoLabel>
		</value>
	</Operation>

	<!-- Out of fuel Message -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "Turret_Autocannon"]/comps/li/outOfFuelMessage</xpath>
		<value>
			<outOfFuelMessage>Cannot shoot: Needs ammo</outOfFuelMessage>
		</value>
	</Operation>

	<!-- Ammo Type -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "Turret_Autocannon"]/comps/li/fuelFilter</xpath>
		<value>
			<fuelFilter><thingDefs><li>AmmoIndustrial</li></thingDefs></fuelFilter>
		</value>
	</Operation>

	<!-- Cost efficiency -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "Turret_Autocannon"]/comps/li/fuelMultiplier</xpath>
		<value>
			<fuelMultiplier>0.5</fuelMultiplier>
		</value>
	</Operation>

</Patch>