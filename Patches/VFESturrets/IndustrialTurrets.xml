<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<!-- Industrial -->

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Vanilla Furniture Expanded - Security</li>
    </mods>

    <match Class="PatchOperationSequence">

      <operations>

	<!-- Description -->
	<li Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "VFES_Turret_MilitaryTurret"]/description</xpath>
		<value>
			<description>A military-grade double barreled automatic turret. Requires industrial ammo to reload. May explode when damaged. Its dumb AI brain can't be directly controlled, so beware of friendly fire.</description>
		</value>
	</li>

	<!-- Fuel Label -->
	<li Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "VFES_Turret_MilitaryTurret"]/comps/li/fuelLabel</xpath>
		<value>
			<fuelLabel>Shots until out of ammo</fuelLabel>
		</value>
	</li>

	<!-- Feul Gizmo Label -->
	<li Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "VFES_Turret_MilitaryTurret"]/comps/li/fuelGizmoLabel</xpath>
		<value>
			<fuelGizmoLabel>Ammo left</fuelGizmoLabel>
		</value>
	</li>

	<!-- Out of fuel Message -->
	<li Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "VFES_Turret_MilitaryTurret"]/comps/li/outOfFuelMessage</xpath>
		<value>
			<outOfFuelMessage>Cannot shoot: Needs ammo</outOfFuelMessage>
		</value>
	</li>

	<!-- Ammo Type -->
	<li Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "VFES_Turret_MilitaryTurret"]/comps/li/fuelFilter</xpath>
		<value>
			<fuelFilter><thingDefs><li>AmmoIndustrial</li></thingDefs></fuelFilter>
		</value>
	</li>

	<!-- Cost efficiency -->
	<li Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "VFES_Turret_MilitaryTurret"]/comps/li/fuelMultiplier</xpath>
		<value>
			<fuelMultiplier>1</fuelMultiplier>
		</value>
	</li>


	<!-- Description -->
	<li Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "VFES_Turret_SentryGun"]/description</xpath>
		<value>
			<description>A self-powered turret with a small gatling gun mounted on top. Requires industrial ammo to reload. Light enough to be carried and deployed wherever. May explode when damaged. Its dumb AI brain can't be directly controlled, so beware of friendly fire.</description>
		</value>
	</li>

	<!-- Fuel Label -->
	<li Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "VFES_Turret_SentryGun"]/comps/li/fuelLabel</xpath>
		<value>
			<fuelLabel>Shots until out of ammo</fuelLabel>
		</value>
	</li>

	<!-- Feul Gizmo Label -->
	<li Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "VFES_Turret_SentryGun"]/comps/li/fuelGizmoLabel</xpath>
		<value>
			<fuelGizmoLabel>Ammo left</fuelGizmoLabel>
		</value>
	</li>

	<!-- Out of fuel Message -->
	<li Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "VFES_Turret_SentryGun"]/comps/li/outOfFuelMessage</xpath>
		<value>
			<outOfFuelMessage>Cannot shoot: Needs ammo</outOfFuelMessage>
		</value>
	</li>

	<!-- Ammo Type -->
	<li Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "VFES_Turret_SentryGun"]/comps/li/fuelFilter</xpath>
		<value>
			<fuelFilter><thingDefs><li>AmmoIndustrial</li></thingDefs></fuelFilter>
		</value>
	</li>



	<!-- Description -->
	<li Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "VFES_Turret_HMGComplex"]/description</xpath>
		<value>
			<description>A stationary heavy machine gun supported by some sandbags to grant cover. Requires industrial ammo to reload.</description>
		</value>
	</li>

	<!-- Fuel Label -->
	<li Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "VFES_Turret_HMGComplex"]/comps/li/fuelLabel</xpath>
		<value>
			<fuelLabel>Shots until out of ammo</fuelLabel>
		</value>
	</li>

	<!-- Feul Gizmo Label -->
	<li Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "VFES_Turret_HMGComplex"]/comps/li/fuelGizmoLabel</xpath>
		<value>
			<fuelGizmoLabel>Ammo left</fuelGizmoLabel>
		</value>
	</li>

	<!-- Out of fuel Message -->
	<li Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "VFES_Turret_HMGComplex"]/comps/li/outOfFuelMessage</xpath>
		<value>
			<outOfFuelMessage>Cannot shoot: Needs ammo</outOfFuelMessage>
		</value>
	</li>

	<!-- Ammo Type -->
	<li Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "VFES_Turret_HMGComplex"]/comps/li/fuelFilter</xpath>
		<value>
			<fuelFilter><thingDefs><li>AmmoIndustrial</li></thingDefs></fuelFilter>
		</value>
	</li>

	<!-- Cost efficiency -->
	<li Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "VFES_Turret_HMGComplex"]/comps/li/fuelMultiplier</xpath>
		<value>
			<fuelMultiplier>1</fuelMultiplier>
		</value>
	</li>

	<!-- Capacity -->
	<li Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "VFES_Turret_HMGComplex"]/comps/li/fuelCapacity</xpath>
		<value>
			<fuelCapacity>120</fuelCapacity>
		</value>
	</li>

      </operations>
    </match>
  </Operation>

</Patch>